generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:password@localhost:5432/lang_app"
}

// IGNORE START
//id refers to source id.
//table_sources is to refer to source id in sources table.
//table_sources is to refer to source id in BWTable table.
// IGNORE END


// no primary key here.
// refers to languages table using id as relation.
// languages table holds "id" which is foreign key here.

model language {
  id                              Int      @id @default(autoincrement())
  temp_id                         String
  entry_id                        String
  gloss_translation_in_original   String
  language_from_original          String
  fuzzy_forms                     String
  sonetic_transliteration         String
  type                            String
}

// Primary key: id.
// acts as foreign key in languages table.
model source {
  id                          Int      @id @default(autoincrement())
  name                        String 
  original_id                 String
  origin                      String
  publication_status          String
  doc_type                    String
  collector                   String
  consultants                 String
  date_collected              String
  location                    String
  languages                   String
  language_name               String
  notes                       String
}

// id is primary/foreign key here.
model boon_source {
  id                              Int      @id @default(autoincrement())
  source                          String
  gloss_translation_in_original   String
  language_from_original          String
  possibly_wathaurong             String
}


//required table as mentioned by Andrew.
model lexicon {
  id                              Int      @id @default(autoincrement())
  english_translation          String
  semantic_field               String
}
