// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:password@localhost:5432/lang_app"
}

model Language {
  id                              Int      @id @default(autoincrement())
  Source_ID                       String
  Temp_ID                         String
  Entry_ID                        String
  Gloss_Translation_in_Original   String
  Language_from_Original          String
  Fuzzy_Forms                     String
  Sonetic_Transliteration         String
  Type                            String
}

model Source {
  id                          Int      @id @default(autoincrement())
  Name                        String 
  Id                          String
  Scans_in_Src_File           String
  In_Database                 String
  Name_of_File                String
  Source                      String
  Publication_Status          String
  Document_Type               String
  Collector                   String
  Consultants                 String
  Date                        String
  Location                    String
  Languages                   String
  Language_Name               String
  Notes                       String
}

model BoonSource {
  id                              Int      @id @default(autoincrement())
  Source                          String
  Gloss_Translation_in_Original   String
  Language_from_Original          String
  Possibly_Wathaurong             String
}

model RootGloss {
  id                              Int      @id @default(autoincrement())
  Regularised_Spelling         String
  Regularised_English_Gloss    String
  Synonym                      String
  Semantic_One                 String
  Semantic_Two                 String
  Word_Class                   String
  Entry_Id_One                 String
  Entry_Id_Two                 String
  Entry_Id_Three               String
  Notes                        String
}

model AiatsisWordList {
  id                              Int      @id @default(autoincrement())
  Gloss_Count                  Int
  Category                     String
  Number                       Int
  Gloss                        String
  Gloss_Form                   String
  Semantic_Field               String
  Part_of_Speech               String
  Other_Note                   String
  Change_Note                  String
  Note                         String
  Scientific_Name              String
  Kin_Designation              String
  Rec_Id                       String
  Basic                        String
}

model FilteredResults {
  id                              Int      @id @default(autoincrement())
  Source                       String
  Unique_Id                    String
  Entry_Id                     String
  Translation_in_Original      String
  Language_Form_in_Original    String
}