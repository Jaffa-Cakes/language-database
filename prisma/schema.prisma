// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:password@localhost:5432/lang_app"
}

model Language {
  Source_ID     String  @id
  SFSources Sources[]
  SBWSources BWSources[]
  Original_Text String?
  Translation   String?
  Fuzzy_Forms   String?
  Sonetics      String?
  Entry_Type    String?
}

model Sources {
  Source_ID              String   @id
  Source_Name            Language? @relation(fields: [Source_ID], references: [Source_ID])
  SourceName             String?
  English_Scans          String?
  Database_Entry         String?
  File_Name              String?
  Source_of_Words        String?
  Publication_Status     String?
  Type_of_Document       String?
  Collector              String?
  Indigenous_Consultants String?
  Date                   String?
  Location               String?
  Language               String?
  Notes                  String?
}

model BWSources {
Source_ID       String @id
Source          Language? @relation(fields: [Source_ID], references: [Source_ID])
Translation     String?
Original        String?
}

model AIATSIS {
  Glossary_Count   Int @id
  Category         String?
  Number           Int?
  Glossary         String?
  HG_Glossary_Form String?
  Semantic_Field   String?
  Speech_Part      String?
  Other_Note       String?
  Change_Note      String?
  Notes            String?
  Scientific_Name  String?
  Kin_Designation  String?
  SW_Rec_ID        String?
  HG_Basic         String?
}

model FilteredResults {
  Source               String?
  Unique_ID            String @id @unique
  Entry_ID             String?
  Glossary_Translation String?
  Original             String?
}
